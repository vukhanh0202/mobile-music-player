<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:background="@drawable/custom_background_banner"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>
    <ImageView
        android:scaleType="fitXY"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/imageViewBackground"
        android:layout_width="match_parent"
        android:layout_height="170dp">
    </ImageView>

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_alignBottom="@+id/imageViewBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageViewBanner"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"
            android:padding="2dp"
            android:layout_width="70dp"
            android:layout_height="70dp">
        </ImageView>
        <TextView
            android:textSize="17sp"
            android:textColor="#f1f1f1"
            android:textStyle="bold"
            android:id="@+id/textViewTitleBanner"
            android:layout_toRightOf="@id/imageViewBanner"
            android:layout_alignTop="@+id/imageViewBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <RelativeLayout
            android:layout_toRightOf="@id/imageViewBanner"
            android:layout_below="@+id/textViewTitleBanner"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewContent"
                android:textColor="#f1f1f1"
                android:maxLines="2"
                android:layout_marginRight="40dp"
                android:textSize="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>