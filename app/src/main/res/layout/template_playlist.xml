<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="@drawable/custom_background_banner"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/imageViewBackgroundPlaylist"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>
    <ImageView
        android:id="@+id/imageViewPlaylist"
        android:layout_alignBottom="@id/imageViewBackgroundPlaylist"
        android:scaleType="fitXY"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="6dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:textColor="#f1f1f1"
        android:layout_alignBottom="@id/imageViewPlaylist"
        android:layout_toRightOf="@id/imageViewPlaylist"
        android:layout_marginLeft="13dp"
        android:id="@+id/textViewNamePlaylist"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>